<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppTempoAgora.MainPage">

    <ScrollView BackgroundColor="DeepSkyBlue">
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">

            <Label x:Name="Welcome" Text="Tempo Agora" FontSize="Subtitle" HorizontalTextAlignment="Center"/>

            <Entry x:Name="txt_cidade" Placeholder="Digite a cidade" 
                   PlaceholderColor="Black"/>
            <Button Text="Buscar" Clicked="Button_Clicked"/>

            <Label x:Name="lbl_res" Text=""/>



        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
